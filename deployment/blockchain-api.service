[Unit]
Description=Blockchain Data API Service
After=network.target postgresql.service

[Service]
Type=simple
User=mac
WorkingDirectory=/Users/mac/Documents/code/blockchain-data
ExecStart=/usr/bin/python3 /Users/mac/Documents/code/blockchain-data/run_api.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/blockchain-api.log
StandardError=append:/var/log/blockchain-api-error.log
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
